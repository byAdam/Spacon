//bridge-file-version: #231
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.player.click.teleporter": {
			"states": {
				"default": {
					"transitions": [
						{
							"on_use": "variable.attack_time"
						}
					]
				},
				"on_use": {
					"transitions": [
						{
							"raycast": "query.get_equipped_item_name(0, 0) == 'teleporter_red_off'"
						},
						{
							"raycast": "query.get_equipped_item_name(0, 0) == 'teleporter_green_off'"
						},
						{
							"raycast": "query.get_equipped_item_name(0, 0) == 'teleporter_blue_off'"
						},
						{
							"default": "!variable.attack_time"
						}
					]
				},
				"raycast": {
					"on_entry": [
						"/function spacon/misc/raycast"
					],
					"transitions": [
						{
							"default": "!variable.attack_time"
						}
					]
				}
			}
		},
		"controller.animation.player.use": {
			"states": {
				"default": {
					"transitions": [
						{
							"use": "query.item_remaining_use_duration > 0 && (query.item_remaining_use_duration/query.item_max_use_duration) < 0.5"
						}
					]
				},
				"use": {
					"transitions": [
						{
							"phazer": "query.get_equipped_item_name(0, 0) == 'phazer'"
						},
						{
							"gravilever": "query.get_equipped_item_name(0, 0) == 'gravilever'"
						}
					]
				},
				"phazer": {
					"on_entry": [
						"/function spacon/items/phazer"
					],
					"on_exit": [
						"/replaceitem entity @s slot.weapon.mainhand 0 spacon:phazer"
					],
					"transitions": [
						{
							"default": "query.item_remaining_use_duration <= 0"
						}
					]
				},
				"gravilever": {
					"on_entry": [
						"/function spacon/items/gravilever"
					],
					"on_exit": [
						"/replaceitem entity @s slot.weapon.mainhand 0 spacon:gravilever"
					],
					"transitions": [
						{
							"default": "query.item_remaining_use_duration <= 0"
						}
					]
				}
			}
		},
		"controller.animation.player.sneak": {
			"states": {
				"default": {
					"transitions": [
						{
							"sneaking": "query.is_sneaking"
						}
					],
					"on_entry": [
						"/tag @s remove is_sneaking"
					]
				},
				"sneaking": {
					"on_entry": [
						"/tag @s add is_sneaking"
					],
					"transitions": [
						{
							"default": "!query.is_sneaking"
						}
					]
				}
			}
		},
		"controller.animation.player.gravity": {
			"states": {
				"default": {
					"transitions": [
						{
							"anti_gravity": "query.is_ignited"
						}
					]
				},
				"anti_gravity": {
					"animations": [
						{
							"anti_gravity": "(1.0)"
						}
					],
					"transitions": [
						{
							"default": "!query.is_ignited"
						},
						{
							"anti_gravity_jump": "query.is_jumping"
						}
					],
					"on_exit": [
						"/effect @s levitation 0",
						"/effect @s haste 0"
					]
				},
				"anti_gravity_jump": {
					"transitions": [
						{
							"anti_gravity": "query.any_animation_finished && (!query.is_jumping || !query.is_ignited)"
						}
					],
					"animations": [
						{
							"anti_gravity_jump": "(1.0)"
						}
					]
				}
			}
		},
		"controller.animation.player.jetpack": {
			"states": {
				"default": {
					"on_entry": [
						"/effect @s levitation 0"
					],
					"transitions": [
						{
							"hover": "query.is_saddled"
						}
					]
				},
				"hover": {
					"on_entry": [
						"/effect @s levitation 0",
						"@s spacon:jetpack_hover"
					],
					"transitions": [
						{
							"rise": "query.is_jumping"
						},
						{
							"fall": "query.is_sneaking"
						},
						{
							"default": "!query.is_saddled"
						}
					]
				},
				"rise": {
					"animations": [
						{
							"jetpack_rise": "(1.0)"
						}
					],
					"transitions": [
						{
							"hover": "!query.is_jumping"
						}
					],
					"on_exit": [
						"/effect @s levitation 0"
					]
				},
				"fall": {
					"on_entry": [
						"/effect @s levitation 0",
						"@s spacon:jetpack_fall"
					],
					"transitions": [
						{
							"hover": "!query.is_sneaking"
						}
					]
				}
			}
		},
		"controller.animation.player.jetpack_activator": {
			"states": {
				"default": {
					"transitions": [
						{
							"jump_a": "query.armor_texture_slot(1) == 3 && query.is_jumping"
						},
						{
							"deactivate": "query.armor_texture_slot(1) != 3"
						}
					]
				},
				"jump_a": {
					"transitions": [
						{
							"jump_b": "!query.is_jumping"
						},
						{
							"default": "query.any_animation_finished"
						}
					],
					"animations": [
						{
							"jetpack_cd": "(1.0)"
						}
					]
				},
				"jump_b": {
					"transitions": [
						{
							"double_jump": "query.is_jumping"
						},
						{
							"default": "query.any_animation_finished"
						}
					],
					"animations": [
						{
							"jetpack_cd": "(1.0)"
						}
					]
				},
				"double_jump": {
					"transitions": [
						{
							"deactivate": "query.is_saddled"
						},
						{
							"activate": "!query.is_saddled"
						}
					]
				},
				"deactivate": {
					"transitions": [
						{
							"default": "(1.0)"
						}
					],
					"on_entry": [
						"@s spacon:deactivate_jetpack"
					]
				},
				"activate": {
					"transitions": [
						{
							"default": "(1.0)"
						}
					],
					"on_entry": [
						"@s spacon:activate_jetpack",
						"/effect @s levitation 1 5 true"
					]
				}
			}
		}
	}
}